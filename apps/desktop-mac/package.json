{
  "name": "@designqa/desktop-mac",
  "version": "2.0.1",
  "description": "DesignQA Desktop App for macOS",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc --watch --project tsconfig.main.json",
    "dev:renderer": "vite",
    "preflight": "node scripts/preflight-check.mjs",
    "build": "npm run build:workspace-packages && npm run verify:workspace-packages && npm run build:frontend && npm run copy:backend && npm run install:backend-deps && npm run resolve:symlinks && npm run preflight && npm run copy:preload && npm run install:deps && npm run resolve:deps && npm run build:main && npm run copy:renderer && npm run check:ts-syntax",
    "build:frontend": "cd ../saas-frontend && pnpm build:electron",
    "copy:renderer": "node scripts/copy-frontend.mjs",
    "install:deps": "CI=true pnpm install --filter @designqa/desktop-mac --no-frozen-lockfile",
    "install:backend-deps": "node scripts/install-backend-deps.js",
    "resolve:symlinks": "node scripts/resolve-symlinks.mjs",
    "resolve:deps": "node scripts/resolve-deps.js",
    "build:main": "tsc --project tsconfig.main.json",
    "build:renderer:old": "vite build",
    "build:workspace-packages": "cd ../../packages/mcp-client && npm run build && cd ../compare-engine && npm run build",
    "verify:workspace-packages": "node scripts/verify-build.js",
    "check:ts-syntax": "node scripts/check-ts-syntax.js",
    "copy:preload": "node scripts/copy-preload.mjs",
    "copy:backend": "node scripts/copy-backend.js",
    "package": "electron-builder --mac",
    "package:all": "electron-builder --mac --win"
  },
  "dependencies": {
    "@designqa/mcp-client": "workspace:*",
    "@myapp/compare-engine": "workspace:*",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-query-devtools": "^5.91.1",
    "dotenv": "^17.2.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "build": {
    "appId": "com.designqa.desktop",
    "productName": "DesignQA",
    "asar": true,
    "asarUnpack": [
      "saas-backend/src/**/*",
      "saas-backend/package.json",
      "saas-backend/node_modules/**/*",
      "src/preload/**/*",
      "preload/**/*",
      "dist/renderer/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "sign": false
    },
    "files": [
      "dist/**/*",
      "src/preload/**/*",
      "preload/**/*",
      "package.json",
      "node_modules/**/*",
      "saas-backend/**/*",
      "!saas-backend/dist/**/*",
      "!saas-backend/tests/**/*",
      "!**/node_modules/**/{README.md,README,readme.md,readme}",
      "!**/node_modules/**/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/**/*.d.ts",
      "!**/node_modules/**/*.map",
      "!**/*.ts",
      "!**/*.tsx",
      "!**/src/**/*.ts",
      "!**/src/**/*.tsx",
      "!**/packages/**/src/**",
      "!**/packages/**/*.ts",
      "!**/packages/**/*.tsx"
    ],
    "directories": {
      "output": "build"
    },
    "extraResources": [
      {
        "from": "saas-backend/node_modules",
        "to": "app.asar.unpacked/saas-backend/node_modules",
        "filter": ["**/*"]
      },
      {
        "from": "saas-backend/package.json",
        "to": "app.asar.unpacked/saas-backend/package.json"
      }
    ]
  }
}
