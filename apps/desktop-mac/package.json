{
  "name": "@designqa/desktop-mac",
  "version": "2.0.1",
  "description": "DesignQA Desktop App for macOS",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc --watch --project tsconfig.main.json",
    "dev:renderer": "vite",
    "build": "npm run copy:backend && npm run build:main && npm run build:renderer",
    "build:main": "tsc --project tsconfig.main.json",
    "build:renderer": "vite build",
    "copy:backend": "node scripts/copy-backend.js",
    "package": "electron-builder --mac",
    "package:all": "electron-builder --mac --win"
  },
  "dependencies": {
    "@myapp/compare-engine": "workspace:*",
    "@designqa/mcp-client": "workspace:*",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "build": {
    "appId": "com.designqa.desktop",
    "productName": "DesignQA",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "sign": false
    },
    "files": [
      "dist/**/*",
      "package.json",
      "saas-backend/src/**/*",
      "saas-backend/package.json",
      "saas-backend/config.json",
      "!saas-backend/node_modules/**/*",
      "!saas-backend/dist/**/*",
      "!saas-backend/tests/**/*"
    ],
    "asarUnpack": [
      "saas-backend/src/**/*"
    ],
    "directories": {
      "output": "build"
    }
  }
}
