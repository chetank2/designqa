{
  "name": "@designqa/desktop-win",
  "version": "2.0.1",
  "description": "DesignQA Desktop App for Windows",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc --watch --project tsconfig.main.json",
    "dev:renderer": "vite",
    "build": "npm run build:workspace-packages && npm run verify:workspace-packages && npm run copy:backend && npm run install:deps && npm run resolve:deps && npm run build:main && npm run build:renderer && npm run check:ts-syntax",
    "install:deps": "pnpm install --filter @designqa/desktop-win",
    "resolve:deps": "node scripts/resolve-deps.js",
    "build:main": "tsc --project tsconfig.main.json",
    "build:renderer": "vite build",
    "build:workspace-packages": "cd ../../packages/mcp-client && npm run build && cd ../compare-engine && npm run build",
    "verify:workspace-packages": "node scripts/verify-build.js",
    "check:ts-syntax": "node scripts/check-ts-syntax.js",
    "copy:backend": "node scripts/copy-backend.js",
    "package": "electron-builder --win",
    "package:all": "electron-builder --win --mac"
  },
  "dependencies": {
    "@designqa/mcp-client": "workspace:*",
    "@myapp/compare-engine": "workspace:*",
    "dotenv": "^17.2.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "build": {
    "appId": "com.designqa.desktop",
    "productName": "DesignQA",
    "asar": true,
    "npmRebuild": false,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "forceCodeSigning": false
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*",
      "!**/node_modules/**/{README.md,README,readme.md,readme}",
      "!**/node_modules/**/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/**/*.d.ts",
      "!**/node_modules/**/*.map",
      "!**/node_modules/**/.{eslintrc,prettierrc,prettierignore,eslintignore}",
      "!**/node_modules/**/{.nyc_output,coverage,.nyc_output}",
      "saas-backend/src/**/*",
      "saas-backend/package.json",
      "saas-backend/config.json",
      "!saas-backend/node_modules/**/*",
      "!saas-backend/dist/**/*",
      "!saas-backend/tests/**/*",
      "!**/*.ts",
      "!**/*.tsx",
      "!**/src/**/*.ts",
      "!**/src/**/*.tsx",
      "!**/packages/**/src/**",
      "!**/packages/**/*.ts",
      "!**/packages/**/*.tsx"
    ],
    "asarUnpack": [
      "saas-backend/src/**/*"
    ],
    "directories": {
      "output": "build"
    }
  }
}
