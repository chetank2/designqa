{
  "name": "@myapp/saas-backend",
  "version": "2.0.0",
  "description": "Compare Figma designs with web implementations - SaaS Edition",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "build": "npm run validate && npm run build:frontend",
    "build:frontend": "cd ../saas-frontend && pnpm build && mkdir -p ../saas-backend/frontend && cp -r dist ../saas-backend/frontend/dist",
    "build:railway": "npm run setup && npm run build",
    "setup": "npm install",
    "test": "node tests/run-tests.js",
    "test:unit": "node tests/run-tests.js unit",
    "test:integration": "node tests/run-tests.js integration",
    "test:api": "node tests/run-tests.js api",
    "test:e2e": "node tests/run-tests.js e2e",
    "test:watch": "node tests/run-tests.js --watch",
    "test:coverage": "node tests/run-tests.js --coverage",
    "test:load": "node tests/load/load-test.js",
    "validate": "node scripts/validate-imports.js",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "security-audit": "npm audit && cd frontend && npm audit",
    "start:production": "NODE_ENV=production node server.js",
    "sync:env": "node scripts/sync-env-vars.js",
    "diagnose": "node scripts/quick-diagnose.cjs",
    "db:migrate": "node scripts/db-migrate.js",
    "db:migrate-data": "node scripts/db-migrate-data.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "@myapp/compare-engine": "workspace:*",
    "@supabase/supabase-js": "^2.45.0",
    "axios": "^1.11.0",
    "canvas": "^3.2.0",
    "compression": "^1.8.1",
    "compromise": "^14.10.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "glob": "^10.3.10",
    "helmet": "^7.2.0",
    "jsbn": "^1.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "natural": "^6.12.0",
    "node-fetch": "^3.3.2",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "puppeteer": "^24.32.1",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.1",
    "sprintf-js": "^1.1.3",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vercel/node": "^5.5.15",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 30000,
    "verbose": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "figma",
    "web",
    "comparison",
    "design",
    "saas",
    "design-qa"
  ],
  "author": "DesignQA Team",
  "license": "MIT"
}
