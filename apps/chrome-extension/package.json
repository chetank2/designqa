{
  "name": "@myapp/chrome-extension",
  "version": "2.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsup && cp manifest.json popup.html dist/",
    "build:prod": "EXTENSION_BACKEND_URL=${EXTENSION_BACKEND_URL:-http://localhost:3847} pnpm build",
    "dev": "tsup src/popup.tsx --format esm --watch --out-dir dist"
  },
  "dependencies": {
    "@myapp/compare-engine": "workspace:*",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.258",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.5",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3"
  }
}
